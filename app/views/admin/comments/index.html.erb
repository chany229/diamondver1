<h1>管理评论</h1>
<div class="content_wrapper">
<div class="content">

<table>
  <thead>
    <tr>
      <th>昵称</th>
      <th>评论</th>
      <th>UA</th>
      <th>IP</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.username %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.useragent %></td>
        <td><%= comment.ip_string %></td>
        <td><%= comment.created_at.to_s(:datetime) %></td>
        <!-- <td><%#= link_to 'Show', [:admin, comment] %></td> -->
        <!-- <td><%#= link_to 'Edit', edit_admin_comment_path(comment) %></td> -->
        <td><%= link_to '删除', [:admin, comment], method: :delete, data: { confirm: '确认删除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @comments %>

</div>
</div>